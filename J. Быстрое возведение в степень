## Реализуйте алгоритм быстрого возведения в степень по модулю, то есть найдите значение следующего выражения: N=(a^n)mod m


#include <iostream>
using namespace std;

int main() {
    long long a, n, m, res;
    cin >> a >> n >> m;

    a %= m;
    if (a < 0) {
        a += m;
    }

    res = 1 % m;

    while (n > 0) {
        if (n % 2 == 1) {
            res = (res * a) % m;
        }
        a = (a * a) % m;
        n = n / 2;
    }

    cout << res;
    return 0;
}
