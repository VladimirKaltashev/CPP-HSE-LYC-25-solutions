## Дан массив, состоящий из целых чисел. Напишите программу, которая определит количество элементов, больших предыдущего элемента массива.


#include <iostream>

using namespace std;

int main() {
    int n, a, b, cnt = 0;
    cin >> n >> a;

    for (int i = 1; i < n; i++) {
        cin >> b;
        if (b > a) {
            cnt += 1;
        }
        a = b;
    }

    cout << cnt;
    return 0;
}
