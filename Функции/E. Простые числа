## Напишите функцию bool isPrime(T number), которая возвращает true, если переданное число является простым, false — иначе. T — нужно заменить на беззнаковый тип, подходящий по ограничениям задачи.
В файле решения должна быть ТОЛЬКО требуемая функция и необходимые хэдеры (#include)
Функция может вызывать множество раз, необходимо реализовать оптимальный алгоритм.

#include <cstdint>

bool isPrime(uint64_t n) {
    if (n < 2) {
        return false;
    }
    if (n == 2 || n == 3) {
        return true;
    }
    if (n % 2 == 0 || n % 3 == 0) {
        return false;
    }

    uint64_t i = 5;
    while (i * i <= n) {
        if (n % i == 0 || n % (i + 2) == 0) {
            return false;
        }
        i += 6;
    }
    return true;
}

uint64_t getPrimeFibNumber(uint32_t idx) {
    if (idx == 1 || idx == 2) {
        return 0;
    }
    uint64_t a = 1, b = 1;
    for (uint32_t i = 3; i <= idx; ++i) {
        uint64_t next = a + b;
        a = b;
        b = next;
    }
    if (isPrime(b)) {
        return b;
    }
    return 0;
}
