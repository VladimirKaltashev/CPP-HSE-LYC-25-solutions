## Напишите функцию, которая проверяет скобочную последовательность с тремя типами скобок
(квадратные, круглые и фигурные) на правильность и возвращает значение типа bool в зависимости
от результата проверки. Затем используйте эту функцию для решения задачи

#include <iostream>
#include <string>
#include <stack>

using namespace std;

bool isCorrect(const string& s) {
    stack<char> st;
    for (char c : s) {
        if (c == '(' || c == '[' || c == '{') {
            st.push(c);
        } else if (c == ')' || c == ']' || c == '}') {
            if (st.empty()) {
                return false;
            }
            char top = st.top();
            if ((c == ')' && top == '(') || (c == ']' && top == '[') || (c == '}' && top == '{')) {
                st.pop();
            } else {
                return false;
            }
        }
    }
    return st.empty();
}

int main() {
    string line;
    while (getline(cin, line)) {
        if (!line.empty() && line.back() == '\r') {
            line.pop_back();
        }
        if (isCorrect(line)) {
            cout << "yes\n";
        } else {
            cout << "no\n";
        }
    }

    return 0;
}
